<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
        <AssemblyName>lhqcmd</AssemblyName>
        <RootNamespace>LHQ.Cmd</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="JavaScriptEngineSwitcher.Jint" Version="3.27.3" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="LHQ.Data">
            <HintPath>libs\LHQ.Data.dll</HintPath>
        </Reference>
        <Reference Include="LHQ.Utils">
            <HintPath>libs\LHQ.Utils.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <None Update="Strings.lhq*">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="js\**\*" WithCulture="false" />
    </ItemGroup>

    <Target Name="CopyFilesBeforeBuild" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <HbsFiles Include="$(MSBuildThisFileDirectory)\..\hbs-templates\*.*" />
        </ItemGroup>
        <Copy SourceFiles="%(HbsFiles.Identity)" DestinationFolder="$(OutputPath)\hbs" OverwriteReadOnlyFiles="true" />
    </Target>
</Project>
