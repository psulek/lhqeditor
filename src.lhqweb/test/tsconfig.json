{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "module": "ES2015",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "web"
  },
  "include": ["web/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
        "esm": true,
        "compilerOptions": {
            "target": "ES2020",
            "module": "Node16",
            "moduleResolution": "node16"
        }
    }
}
