{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "module": "ES2015",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
