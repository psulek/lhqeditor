<components:AppUserControl x:Class="LHQ.App.Components.TooltipIcon"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:components="clr-namespace:LHQ.App.Components"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           d:DesignHeight="300"
                           d:DesignWidth="300"
                           mc:Ignorable="d">
    <Grid>
        <Image Width="24"
               Height="24"
               Source="/LHQ.App;component/Images/dialog-info_24.png"
               ToolTip="{Binding ToolTip, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
    </Grid>
</components:AppUserControl>
