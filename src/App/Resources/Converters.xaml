<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LHQ.App.Components.Converters">
    <converters:BoolToVisibleOrHidden x:Key="BoolToVisibilityConverter" Collapse="True" />
    <converters:BoolToVisibleOrHidden x:Key="BoolToVisibilityConverterHidden" Collapse="False" />
    <converters:BoolToVisibleOrHidden
        x:Key="BoolToVisibilityConverterHiddenReverse"
        Collapse="False"
        Reverse="True" />
    <converters:BoolToVisibleOrHidden
        x:Key="BoolToVisibilityConverterReverse"
        Collapse="True"
        Reverse="True" />
    <converters:ReverseBoolConverter x:Key="ReverseBoolConverter"/>
    <converters:MultiplyValueConverter x:Key="MultiplyValue" />
    <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
    <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
    <converters:TreeElementSelectionConverter x:Key="TreeElementSelectionConverter" />
    <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter" />
    <converters:ImagePackConverter x:Key="ImagePackConverter" />

    <converters:TranslationStateConverter x:Key="TranslationStateImageConverter" Type="Image" />
    <converters:TranslationStateConverter x:Key="TranslationStateTextConverter" Type="Text" />
    <converters:UILanguageToImageConverter x:Key="UiLanguageImageConverter" />
    <converters:ShellViewBusyOperationConverter x:Key="ShellViewBusyOperationConverterBool" Kind="Boolean" />
    <converters:ShellViewBusyOperationConverter x:Key="ShellViewBusyOperationConverterVisibility" Kind="Visibility" />
    <converters:ShellViewBusyOperationConverter x:Key="ShellViewBusyOperationConverterDescriptionText" Kind="DescriptionText" />

    <converters:DialogIconToImageConverter x:Key="DialogIconToImageConverter" />

    <!--
    <converters:TreeElementToImageConverter x:Key="TreeElementToImageConverter"
                                            ApplyState="False" />
    <converters:TreeElementToImageConverter x:Key="TreeElementToImageWithStateConverter"
                                            ApplyState="True" />-->

    <converters:PortionValueConverter x:Key="PortionValueConverter" />
    <converters:DebugOnlyVisibilityConverter x:Key="DebugOnlyVisibilityConverter" Collapse="True" />
    <converters:DebugOnlyVisibilityConverter x:Key="DebugOnlyVisibilityConverterHidden" Collapse="False" />

    <converters:BulletListItemHeightConverter x:Key="BulletListItemHeightConverter" />
</ResourceDictionary>