<UserControl
    x:Class="LHQ.App.Views.Dummy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:virtualTreeListViewControl="clr-namespace:LHQ.App.Components.VirtualTreeListViewControl"
    d:DesignHeight="100"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Border
            Height="20"
            BorderBrush="Crimson"
            BorderThickness="1">

            <DockPanel LastChildFill="True">
                <virtualTreeListViewControl:NodeExpander VerticalAlignment="Center" />

                <Border Margin="0,0,5,0" />

                <fa:ImageAwesome
                    Width="16"
                    Height="16"
                    Margin="0,0,5,0"
                    Foreground="DarkGray"
                    Icon="AddressBook" />

                <TextBlock VerticalAlignment="Top" Text="Super long text" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
